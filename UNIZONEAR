  <script>
    function toggleMenu(){
      const nav = document.querySelector('nav ul');
      nav.style.display = nav.style.display === 'flex' ? 'none' : 'flex';
      if(nav.style.display==='flex'){nav.style.flexDirection='column';nav.style.gap='10px';nav.style.background='#fff';nav.style.padding='14px';nav.style.border='1px solid #e5e7eb';nav.style.borderRadius='14px';}
